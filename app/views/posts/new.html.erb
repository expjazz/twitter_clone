

<div class="ui relaxed equal width grid">
  <div class="ui row">
    <div class="ui four wide column"></div>
    <div class="ui eight wide column segment">
    <h2 class="ui center aligned dividing header"><i class="signup icon"></i>Create a new post</h2>
      <div class="ui form">

        <%= form_with model:@post, local: true do |f| %>
          <div class="ui error message">

          </div>
      <div class="field">
            <%= f.label :title %>
            <%= f.text_field :title %>
      </div>
      <div class="field">
            <%= f.label :body %>
            <%= f.text_field :body %>
      </div>

          
          <%= f.file_field :image %>
          <div class="ui left icon input">
            <%= f.submit "Sign up" ,class: "ui submit button primary " %>
            <i class="users icon"></i>
          </div>
        <% end %>
      <div class="ui horizontal divider">or</div>
        <div class="ui celled horizontal list">
        </div>
      </div>
    </div>
  </div>
</div>
