<h1> Search for a specific post you like </h1>

<div class="ui fluid category search">
  <%= form_with url: search_post_path, method: :get, local: true do %>
    <div class="ui icon input">
      <%= text_field_tag :post, params[:post], class: 'prompt'%>
      <i class="search icon"></i>
      

    </div>

  <% end %>
  <div class="result">
    <%= render 'welcome/searchresult'%>
  </div>
</div>