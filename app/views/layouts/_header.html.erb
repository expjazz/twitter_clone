<div class="ui inverted mini menu">
<div class="ui container">
  <%= link_to 'Create posts', new_post_path, class: 'item'%>
  <%= link_to 'Feed', root_path, class: 'item'%>
  <%= link_to 'Users', users_path, class: 'item'%>

  <div class="right menu">
    <div class="ui dropdown item">
      <%= current_user.username if user_signed_in? %> <i class="dropdown icon"></i>
      <div class="menu">        
      <% if user_signed_in? %>
        <%= link_to 'Profile', user_path(current_user), class: 'item' %>
        <%= link_to 'Log out', destroy_user_session_path, class: 'item', method: :delete%>
      <% else %>
        <%= link_to 'Log in', new_user_session_path, class: 'item' %>
        <%= link_to 'Sign up', new_user_registration_path, class: 'item' %>
      <% end %>
      </div>
    </div>
    </div>
  </div>
</div>